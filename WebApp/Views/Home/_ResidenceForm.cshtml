@model IndexResidenceFormViewModel

<form id="ResidenceForm" method="post">
	<div class="row mb-3">
		<div class="col">
			<div class="form-floating">
				<input class="form-control" asp-for="StreetName" placeholder="Название улицы" autocomplete="off" required />
				<label asp-for="StreetName">Улица</label>
			</div>
		</div>
		<div class="col">
			<div class="form-floating">
				<input class="form-control" asp-for="StreetNumber" placeholder="Номер дома" autocomplete="off" required />
				<label asp-for="StreetNumber">Дом</label>
			</div>
		</div>
		<div class="col">
			<div class="form-floating">
				<input class="form-control" asp-for="DoorNumber" placeholder="Название квартиры" autocomplete="off" required />
				<label asp-for="DoorNumber">Квартира</label>
			</div>
		</div>
	</div>
	<button class="btn btn-primary" type="submit">Сохранить</button>
</form>
